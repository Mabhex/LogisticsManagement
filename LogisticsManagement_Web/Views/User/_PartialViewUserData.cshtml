@using LogisticsManagement_Poco;
@model IEnumerable<App_UserPoco>


<script>
    $(document).ready(function () {

        if ($.fn.dataTable.isDataTable('#user-list')) {
            $('#user-list').DataTable().destroy();
        }
        $('#user-list').DataTable({
            "order": [[2, "asc"]]
        });
    });
</script>

<div class="row">
    <div class="col-sm-12">
        <table id="user-list" class="table table-striped table-bordered lms_dataTable" cellspacing="0" style="width:100%">
            <thead>
                <tr>
                    <th>User Name</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Phone</th>
                    <th>Email</th>
                    <th>Active?</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>
                        @item.UserName
                    </td>
                    <td>
                        @item.FirstName
                    </td>
                    <td>
                        @item.LastName
                    </td>
                    <td>
                        @item.PhoneNumber
                    </td>
                    <td>
                        @item.EmailAddress
                    </td>
                    <td>
                        @item.IsActive
                    </td>

                    <td>
                        <button id="btnEdit" data-userid='@item.Id' class="btn btn-sm btn-primary btnEdit" type="button"><i class="fa fa-edit"></i> </button>
                        <button id="btnDelete" data-userid='@item.Id' class="btn btn-sm btn-danger btnDelete" data-toggle="modal" data-target="#alert-modal" type="button"><i class="fa fa-trash"></i> </button>
                    </td>
                </tr>
                }


            </tbody>
        </table>
    </div>
</div>
<script src="~/js/app-user.js"></script>
