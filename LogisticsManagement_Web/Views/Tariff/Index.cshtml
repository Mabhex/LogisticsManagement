@model IEnumerable<LogisticsManagement_Poco.Lms_TariffPoco>

@{
    ViewData["Title"] = "Tarrif";
}

<div class="row">
    <div class="col-sm-12">
        <div class="card">
            <div class="card-header" style="background-color: #3b80a9;color: #fff;">
                <strong><i class="fa fa-sliders"></i> Tariff</strong>
            </div>

            <div class="card-body">
                <div class="row">

                    <div class="col-sm-4 col-md-2">
                        <div class="form-group">
                            <input class="form-control" id="txtbiller-name" type="text" name="billername" placeholder="Name" />
                        </div>
                        <div class="form-group">
                            <input class="form-control" id="txtbiller-name" type="text" name="billername" placeholder="Name" />
                        </div>
                        <div class="form-group">
                            <input class="form-control" id="txtbiller-name" type="text" name="billername" placeholder="Name" />
                        </div>
                        <div class="form-group">
                            <input class="form-control" id="txtbiller-name" type="text" name="billername" placeholder="Name" />
                        </div>


                        
                        

                        
                    </div>

                    
                </div>

                <hr />
                <button type="button" class="btn btn-primary"><i class="fa fa-save"></i> Save</button>
                <button type="button" class="btn btn-secondary"><i class="fa fa-edit"></i> Update</button>

            </div>
        </div>
    </div>
</div>


<div class="row">
    <div class="col-sm-12">
        <div class="card">
            <div class="card-header" style="background-color: #c3c3c3;">
                <strong><i class="fa fa-sliders"></i> Available Tariffs</strong>
                <div class="card-header-actions">
                    <a class="card-header-action btn-minimize" href="#" data-toggle="collapse" data-target="#collapseDatatable" aria-expanded="true">
                        <i class="icon-arrow-up"></i>
                    </a>
                </div>
            </div>
            <div class="collapse show" id="collapseDatatable">
                <div class="card-body">
                    <div class="row">
                        <div class="col-sm-12">
                            <table id="datatable-list" class="table table-striped table-bordered" cellspacing="0" width=100%>
                                <thead>
                                    <tr>
                                        <th>Id</th>
                                        <th>City</th>
                                        <th>Delivery</th>
                                        <th>Transport</th>
                                        <th>Unit</th>
                                        <th>First Unit</th>
                                        <th>Per Unit</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.Id</td>
                                            <td>@item.CityId</td>
                                            <td>@item.DeliveryOptionId</td>
                                            <td>@item.VehicleTypeId</td>
                                            <td>@item.UnitTypeId</td>
                                            <td>@item.FirstUnitPrice</td>
                                            <td>@item.PerUnitPrice</td>
                                            <td>
                                                <button id="" data-bind="@item.Id" class="btn btn-sm btn-secondary" style="padding:.25rem .4rem;font-size: .875rem;line-height: .5;border-radius: .2rem;"><i class="fa fa-edit"></i></button>

                                            </td>
                                        </tr>
                                    }


                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
