    ViewData["Title"] = "Dispatch board";
}

<style>
    .form-control {
        padding: 4px 4px 4px 8px;
        height: 29px;
    }

    .form-group {
        margin-bottom: .15rem;
    }

    #order-list tbody tr {
        height: 35px; /* or whatever height you need to make them all consistent */
