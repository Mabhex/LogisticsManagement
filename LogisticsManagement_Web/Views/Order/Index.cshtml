<!-- Modal - Pickup Order -->
<div class="modal fade bd-example-modal-xl" id="orderPickup" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
        <div class="modal-content bg-light">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalCenterTitle"><img src="~/images/flaticons-64x64/trolley.png" style="height:25px; padding-left:28px; padding-right:10px" />Pickup Order</h5>

                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-sm-5 form-group">
                            <label for="txtWayBillNoForPickupModal">W/B number</label>
                            <div class="row mb-1 ">
                                <div class="col-sm-12 input-group">
                                    <input class="col-9 form-control form-control-sm " placeholder="&#xF002; W/B No." style="font-family:Arial, FontAwesome" id="txtWayBillNoForPickupModal" type="number" name="txtWayBillNoForPickupModal">
                                    <input type="text" class="col-3 form-control form-control-sm" id="txtOrderIdForPickupModal" style="font-style:italic;font-variant-position:super; text-align:right; font-size:.8em; padding-right:5px" disabled readonly />
                                </div>
                            </div>
                        </div>

                    </div>
                    <div class="row">
                        <div class="col-sm-5 form-group">
                            <label for="txtDispatchDateTimeForPickupModal">Dispatch date and time</label>
                            <input type="datetime-local" id="txtDispatchDateTimeForPickupModal" class="form-control form-control-sm txtDispatchDateTimeForPickupModal" readonly />
                        </div>
                        <div class="col-sm-7 form-group">
                            <label for="txtDispatchEmployeeNameForPickupModal">Dispatched to</label>
                            <input type="text" id="txtDispatchEmployeeNameForPickupModal" class="form-control form-control-sm txtDispatchEmployeeNameForPickupModal" readonly />

                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-5 form-group">
                            <label for="txtPickupDateTime">Pickup date and time</label>
                            <input type="datetime-local" id="txtPickupDateTime" class="form-control form-control-sm txtPickupDateTime" />
                        </div>
                        <div class="col-sm-3 form-group">
                            <label for="txtPickupWaitTime">Wait time (hour)</label>
                            <input type="number" id="txtPickupWaitTime" class="form-control form-control-sm txtPickupWaitTime" placeholder="Wait time" min="0" step=".01" title="Wait time (in hours)" />
                        </div>

                    </div>
                    <hr />
                    <div class="row">
                        <div class="col-sm-6">
                            <button type="button" class="btn btn-sm btn-success" id="btnSavePickup"><i class="fa fa-save"></i> Save pickup</button>
                            <button type="button" class="btn btn-sm btn-danger" id="btnRemovePickup"><i class="fa fa-trash"></i> Remove pickup </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Modal - Pickup Order -->
<!-- Modal - Pass-on Order -->
