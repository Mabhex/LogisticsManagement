<form id="frmOrderForm">
    <!-- Modal - New Order -->
    <div class="modal fade bd-example-modal-xl" id="newOrder" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-xl" role="document">
            <div class="modal-content bg-light">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalCenterTitle">New Order</h5>

                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="container-fluid">
                        <div class="row ">
                            <div class="col-md-12">
                                <div class="row">
                                    <small>
                                        <label style="margin-top:5px" id="lblPaidBy" for="rdoPaidBy"><b>Paid by</b></label>
                                    </small>
                                    <div class="col-sm-3" style="border:1px solid #43d1f1; padding:3px 0px 0px 6px; margin-left:14px; margin-right:8px; background-color:#cffbff">
                                        <div class="form-check form-check-inline">
                                            <input class="form-check-input" type="radio" name="rdoPaidBy" id="rdoShipper" value="1" checked>
                                            <small><label class="form-check-label" for="rdoShipper">Shipper</label></small>
                                        </div>
                                        <div class="form-check form-check-inline">
                                            <input class="form-check-input" type="radio" name="rdoPaidBy" id="rdoConsignee" value="2">
                                            <small><label class="form-check-label" for="rdoConsignee">Consingee</label></small>
                                        </div>
                                        <div class="form-check form-check-inline">
                                            <input class="form-check-input" type="radio" name="rdoPaidBy" id="rdoThirdParty" value="3">
                                            <small><label class="form-check-label" for="rdoThirdParty">3rd. Pty</label></small>
                                        </div>
                                    </div>
                                    <small>
                                        <label style="margin-top:5px" id="lblBillTo" for="txtBillToCustomerName"><b>Biller</b></label>
                                    </small>
                                    <div class="col-sm-3">
                                        <input class="form-control form-control-sm" id="txtBillToCustomerName" name="txtBillToCustomerName" placeholder="Bill to" list="dlBillers" type="search" style="width:272px" />
                                        <datalist id="dlBillers">
                                            @foreach (var item in Model.Customers)
                                            {
                                                <option value="(@item.Id) - @item.CustomerName" data-customerid="@item.Id"></option>
                                            }
                                        </datalist>
                                    </div>
                                    <small>
                                        <label id="lblOrderedBy" for="txtOrderedBy" style="margin-left:27px; margin-top:5px"><b>Ordered by</b></label>
                                    </small>
                                    <div class="col-sm-2">
                                        <input type="text" class="form-control form-control-sm" placeholder="Ordered by" id="txtOrderedBy" name="txtOrderedBy" title="Ordered by">
                                    </div>
                                    <small>
                                        <label style="margin-top:5px" id="lblOrderedByDepartment" for="txtOrderedByDepartment"><b>Pkp. ref#</b></label>
                                    </small>
                                    <div class="col-sm-1">
                                        <input type="text" class="form-control form-control-sm" placeholder="Department" id="txtOrderedByDepartment" name="txtOrderedByDepartment" title="Department" style="width:107px">
                                    </div>
                                </div>
                                <div class="row" style="margin-top:8px">
                                    <small>
                                        <label style="margin-top:5px" id="lblDeliveryOptionId" for="ddlDeliveryOptionId"><b>Service</b></label>
                                    </small>
                                    <div class="col-sm-2">
                                        <select class="form-control form-control-sm" id="ddlDeliveryOptionId" name="ddlDeliveryOptionId">
                                            @foreach (var deliveryOption in Model.DeliveryOptions)
                                            {
                                                <option value="@deliveryOption.Id">@deliveryOption.OptionName - (@deliveryOption.ShortCode) </option>
                                            }
                                        </select>
                                    </div>
                                    <small>
                                        <label style="margin-top:5px" id="lblWayBillNo" for="txtWayBillNo"><b>W/B #</b></label>
                                    </small>
                                    <div class="col-sm-2">
                                        <input class="form-control form-control-sm" placeholder="&#xF002; W/B No." style="font-family:Arial, FontAwesome" id="txtWayBillNo" type="number" name="txtWayBillNo" readonly>
                                    </div>
                                    <small>
                                        <label style="margin-top:5px" id="lblCustomerRefNo" for="txtCustomerRefNo"><b>Cust. ref#</b></label>
                                    </small>
                                    <div class="col-sm-2">
                                        <input type="text" class="form-control form-control-sm" placeholder="Cust Ref" id="txtCustomerRefNo" name="txtCustomerRefNo" title="Customer ref #">
                                    </div>
                                    <small>
                                        <label style="margin-top:5px" id="txtCargoCtlNo" for="txtCargoCtlNo"><b>Cargo ctl#</b></label>
                                    </small>
                                    <div class="col-sm-2">
                                        <input type="text" class="form-control form-control-sm" placeholder="Cargo Ctl#" id="txtCargoCtlNo" name="txtCargoCtlNo" title="Cargo Ctl No">
                                    </div>
                                    <small>
                                        <label style="margin-top:5px" id="txtAwbCtnNo" for="txtAwbCtnNo"><b>Awb ctl#</b></label>
                                    </small>
                                    <div class="col-sm-1">
                                        <input type="text" class="form-control form-control-sm" placeholder="Awb Ctl#" id="txtAwbCtnNo" name="txtAwbCtnNo" title="Awb Ctn No" style="width:107px">
                                    </div>
                                </div>
                                <div class="row">
                                    <hr style="border-top:1px solid #cccccc; padding:0px; width:100%" />
                                </div>
                                <div class="row" style="margin-top:8px">

                                    <div class="col-4" style="padding-left:0px">
                                        <div class="row mb-1">
                                            <small class="col-sm-12" style="color:#000; font-weight:bold">Shipper Acc#: <label id="lblShipperAccountNo"></label></small>
                                        </div>
                                        <div class="row mb-1">

                                            <div class="form-group col-md-12 input-group">
                                                <input list="dlShipperCustomers" class="form-control form-control-sm" placeholder="Shipper name" id="txtShipperCustomerName" type="search"/>
                                                <datalist id="dlShipperCustomers">
                                                    @foreach (var item in Model.Customers)
                                                    {
                                                        <option data-customerid="@item.Id" value="(@item.Id) - @item.CustomerName"></option>
                                                    }
                                                </datalist>
                                            </div>
                                        </div>
                                        <div class="row mb-1">
                                            <div class="col-12 input-group">
                                                <input type="text" class="col-9 form-control form-control-sm" placeholder="Address" id="txtShipperAddressline" name="txtShipperAddressline">
                                                <input type="text" class="col-3 form-control form-control-sm" placeholder="Unit" id="txtShipperUnitNo" name="txtShipperUnitNo">
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-12 input-group">
                                                <select class="col-6 form-control form-control-sm" id="ddlShipperCityId" name="ddlShipperCityId" style="-webkit-appearance: none;">
                                                    <option value="0"> City  </option>
                                                    @foreach (var item in Model.Cities)
                                                    {
                                                        <option value="@item.Id">@item.CityName</option>
                                                    }
                                                </select>
                                                <select class="col-3 form-control form-control-sm" id="ddlShipperProvinceId" name="ddlShipperProvinceId" style="-webkit-appearance: none;">
                                                    <option value="0"> Province </option>
                                                    @foreach (var item in Model.Provinces)
                                                    {
                                                        <option value="@item.Id">@item.ShortCode</option>
                                                    }
                                                </select>
                                                <input type="text" class="col-3 form-control form-control-sm" placeholder="Postcode" id="txtShipperPostcode" name="txtShipperPostcode">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-4">
                                        <div class="row mb-1">
                                            <small class="col-sm-12" style="color:#000; font-weight:bold">Consignee Acc#: <label id="lblConsigneeAccountNo"></label></small>
                                        </div>
                                        <div class="row mb-1">
                                            <div class="form-group col-md-12 input-group">
                                                <input list="dlConsigneeCustomers" class="form-control form-control-sm" placeholder="Consignee name" id="txtConsigneeCustomerName" type="search" />
                                                <datalist id="dlConsigneeCustomers">
                                                    @foreach (var item in Model.Customers)
                                                    {
                                                        <option data-customerid="@item.Id" value="(@item.Id) - @item.CustomerName"></option>
                                                    }
