@using LogisticsManagement_Web.Models;
@model List<PendingWaybillsForInvoice>


<script>
    $(document).ready(function () {
        if ($.fn.dataTable.isDataTable('#orderdispatch-list')) {
            $('#orderdispatch-list').DataTable().destroy();
        }
        $('#orderdispatch-list').DataTable({
            "order": [[0, "desc"]]
        });
    });
</script>
<form id="frmInvoiceGenerationForm">
    <div class="row">
        <div class="col-sm-12">
            <div class="card">
                <div class="card-header" style="background-color: #365396;color: #fff;">
                    <strong><i class="fa fa-sliders"></i> Select Order/s</strong>
                    <div class="card-header-actions">
                        <span id="spinnerLoadingDataTable" style="display:none">
                            <span class="spinner-border spinner-border-sm text-primary" role="status" aria-hidden="true" style="margin-right:5px"></span>
                            <span style="margin-right:20px">Loading...</span>
                        </span>
                        <button id="btnDownloadPendingInvoiceData" type="button" class="btn btn-sm btn-primary" title="Load existing data" style="padding:0px 5px 0px 5px"><i class="fa fa-download"></i></button>
                        <span style="display:none" id="loadingSpinner"><i class="fa fa-circle-o-notch"></i></span>
                        <span>&nbsp;&nbsp;</span>
                        <a class="card-header-action btn-minimize" href="#" data-toggle="collapse" data-target="#collapseDatatable" aria-expanded="true">
                            <i class="icon-arrow-up"></i>
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    <div id="loadPendingInvoiceDataTable">
                        <partial name="_PartialViewPendingData" />
                    </div>

                </div>
            </div>
        </div>
    </div>
    <hr />
    <div class="row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-success" id="btnSave"><i class="fa fa-save"></i> Generate invoice/s</button>
        </div>
    </div>
</form>

<br /><br />
<hr />

<div class="row">
    <div class="col-sm-12">
        <div class="card">
            <div class="card-header" style="background-color: #c3c3c3;">
                <strong><i class="fa fa-sliders"></i> Invoices</strong>
                <div class="card-header-actions">
                    <span id="spinnerLoadingDataTable" style="display:none">
                        <span class="spinner-border spinner-border-sm text-primary" role="status" aria-hidden="true" style="margin-right:5px"></span>
                        <span style="margin-right:20px">Loading...</span>
                    </span>
                    <button id="btnDownloadDataInvoiceData" type="button" class="btn btn-sm btn-primary" title="Load existing data" style="padding:0px 5px 0px 5px"><i class="fa fa-download"></i></button>
                    <span style="display:none" id="loadingSpinner"><i class="fa fa-circle-o-notch"></i></span>
                    <span>&nbsp;&nbsp;</span>
                    <a class="card-header-action btn-minimize" href="#" data-toggle="collapse" data-target="#collapseDatatable" aria-expanded="true">
                        <i class="icon-arrow-up"></i>
                    </a>
                </div>
            </div>
            <div class="collapse show" id="collapseDatatable">
                <div class="card-body">
                    <div id="loadDispatchedDataTable">
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/js/order-dispatch.js"></script>
