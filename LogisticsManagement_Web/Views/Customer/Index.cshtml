@using LogisticsManagement_Web.Models;
@model TariffViewModel


@{
    ViewData["Title"] = "Customer";
}

<form id="frmCustomerForm">
    <div class="row">
        <div class="col-sm-12">
            <div class="card">
                <div class="card-header" style="background-color: #3b80a9;color: #fff;">
                    <strong><i class="fa fa-sliders"></i> Customer</strong>
                </div>

                <div class="card-body">
                    <div class="row">
                        <div class="form-group col-sm-1">
                            <input class="form-control" id="txtCustomerId" placeholder="ID" type="number" />
                        </div>
                        <div class="form-group col-sm-1" style="padding-left: 0px;">
                            <button id="btnFindCustomer" class="btn btn-secondary"><i class="fa fa-search"></i></button>
                        </div>
                    </div>

                    <div class="row">
                        <div class="form-group col-sm-2">
                            <input class="form-control" id="txtFirstName" placeholder="ID" type="text" value="0" />
                        </div>
                        <div class="form-group col-sm-1" style="padding-left: 0px;">
                            <button id="btnFindTariff" class="btn btn-secondary"><i class="fa fa-search"></i></button>
                        </div>
                    </div>



                    <hr />
                    <button type="button" class="btn btn-primary" id="btnNew"><i class="fa fa-plus-circle"></i> New</button>
                    <button type="submit" class="btn btn-success" id="btnSave"><i class="fa fa-save"></i> Save</button>

                </div>
            </div>
        </div>
    </div>
</form>

<partial name="_PartialViewEmployeeData" />

<script src="~/js/employee.js"></script>