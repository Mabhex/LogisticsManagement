@using LogisticsManagement_Web.Models;
@model CustomerViewModel


<script>
    $(document).ready(function () {
        $('#customer-list').DataTable({
            "order": [[0, "desc"]],
        });
    });
</script>

<div class="row">
    <div class="col-sm-12">
        <table id="customer-list" class="table table-striped table-bordered lms_dataTable" cellspacing="0" width=100%>
            <thead>
                <tr>
                    <th>Number</th>
                    <th>Name</th>
                    <th>Special Discount(%)</th>
                    <th>Invoice Due(days)</th>
                    <th>Active?</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody id="tBodyCustomer">

                @foreach (var item in Model.Customers)
                {
                    <tr>
                        <td>
                            @item.CustomerNumber
                        </td>
                        <td>
                            @item.CustomerName
                        </td>
                        <td>
                            @(item.DiscountPercentage == null ? 0 : item.DiscountPercentage)
                        </td>
                        <td>
                            @(item.InvoiceDueDays == null ? 0 : item.InvoiceDueDays)
                        </td>
                        <td>
                            @item.IsActive
                        </td>

                        <td>
                            <button id="btnEdit" data-customer='@Json.Serialize(item)' class="btn btn-sm btn-primary btnEdit" type="button"><i class="fa fa-edit"></i> </button>
                            <button id="btnDelete" data-customerid='@item.Id' class="btn btn-sm btn-danger btnDelete" data-toggle="modal" data-target="#alert-modal" type="button"><i class="fa fa-trash"></i> </button>
                        </td>
                    </tr>
                }


            </tbody>
        </table>
    </div>
</div>
<script src="~/js/customer.js"></script>